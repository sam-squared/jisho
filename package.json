{
  "name": "jisho",
  "version": "0.0.0",
  "description": "GraphQL layer for pokemon api",
  "keywords": [
    "jisho",
    "node",
    "typescript"
  ],
  "homepage": "https://github.com/sam-squared/jisho/",
  "repository": {
    "type": "git",
    "url": "https://github.com/sam-squared/jisho/"
  },
  "license": "MIT",
  "author": {
    "name": "sam-squared"
  },
  "files": [
    "build/*.*js.map",
    "build/*.*js",
    "build/*.d.ts.map",
    "build/*.d.ts"
  ],
  "main": "build/index",
  "module": "build/index.mjs",
  "typings": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "yarn run build && node build/index.js",
    "test": "jest --coverage",
    "lint": "tslint --project ./tsconfig.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^25.2.0",
    "tslint": "^5.17.0",
    "tslint-config-semistandard": "^8.0.1",
    "typescript": "^3.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ]
  },
  "tslint": {
    "config": "./tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
